extends ../layout

block content
  h1 #{t(title)}
  form(method='POST' action='create')
    div.form-group
      label(for='name') #{t('home.genre')}:
      input#name.form-control(type='text' placeholder='Fantasy, Poetry etc.' name='name' value=(undefined===genre ? '' : genre.name))
    button.btn.btn-primary(type='submit') #{t('button.submit')}
  if errors
    ul
      for error in errors
        li!= error.msg

