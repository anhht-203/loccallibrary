doctype html
html
  head
    title= title
    meta(charset='utf-8')
    meta(name='viewport' , content='width=device-width, initial-scale=1' )
    link(rel="stylesheet" , href='/stylesheets/bootstrap.min.css' )
    script(src="/scripts/jquery-3.5.1.slim.min.js" ) 
    script(src="/scripts/bootstrap.min.js" )
    link(rel='stylesheet' , href='/stylesheets/layout.css' )
  body
    div(class='container-fluid' )
      div(class='row mt-5' )
        div(class='col-sm-2' )
          block sidebar
            ul(class='sidebar-nav' )
              li
                a(href='/' ) #{t('sidebar.name')}
              li
                a(href='/books' ) #{t('sidebar.book')}
              li
                a(href='/authors' ) #{t('sidebar.author')}
              li
                a(href='/genres' ) #{t('sidebar.genre')}
              li
                a(href='/bookinstances' ) #{t('sidebar.bookInstance')}
              hr
              li 
                a(href='/authors/create' ) #{t('sidebar.createAuthor')}
              li
                a(href='/genres/create' ) #{t('sidebar.createGenre')}
              li
                a(href='/books/create' ) #{t('sidebar.createBook')}
              li
                a(href='/bookinstances/create' ) #{t('sidebar.createBookInstance')}
              li
                a(href='?lang=en' ) #{t('language.en')} | 
                a(href='?lang=vi' ) #{t('language.vi')}
        div(class='col-sm-10' )
          block content
